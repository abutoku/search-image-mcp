{
  "name": "@abutoku/search-image-mcp",
  "version": "1.0.1",
  "description": "MCP server for searching images on Unsplash",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build && cp README.md README.github.md && cp README.npm.md README.md",
    "postpublish": "cp README.github.md README.md && rm README.github.md",
    "docker:build": "docker build -t search-image-mcp:latest .",
    "docker:run": "docker run -it --rm -e UNSPLASH_ACCESS_KEY=$UNSPLASH_ACCESS_KEY search-image-mcp:latest",
    "docker:tag": "docker tag search-image-mcp:latest ${DOCKER_USERNAME:-yourusername}/search-image-mcp:latest",
    "docker:push": "npm run docker:tag && docker push ${DOCKER_USERNAME:-yourusername}/search-image-mcp:latest",
    "docker:publish": "npm run docker:build && npm run docker:push"
  },
  "keywords": ["mcp", "model-context-protocol", "unsplash", "image-search"],
  "author": "abutoku",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abutoku/search-image-mcp"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.11.0"
  }
}
